{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}
